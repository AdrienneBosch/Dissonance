<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="PrimaryBrush" Color="#0c0c0c"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="#FF3A3A3A"/>

    <SolidColorBrush x:Key="TitleBarPrimaryBrush" Color="#0c0c0c"/>
    <SolidColorBrush x:Key="TitleBarSecondaryBrush" Color="#080808"/>
    <SolidColorBrush x:Key="TitleBarButtonBrush" Color="#1d1d1d"/>
    
    
    <SolidColorBrush x:Key="CloseButtonHighlightBrush" Color="#ba0000"/>
    <SolidColorBrush x:Key="MinimizeButtonHighlightBrush" Color="#323232"/>
    <SolidColorBrush x:Key="MaximizeButtonHighlightBrush" Color="#323232"/>

    <ImageBrush x:Key="BackgroundBrush" ImageSource="pack://application:,,,/Dissonance;component/Assets/Images/BackgroundImages/DarkBackground.png"/>

    <ImageBrush x:Key="ExitButtonBrush" ImageSource="pack://application:,,,/Dissonance;component/Assets/Images/Buttons/TitleBarButtons/DarkMode/WhiteCloseButtonSmaller.png"/>
    <ImageBrush x:Key="MinimizeButtonBrush" ImageSource="pack://application:,,,/Dissonance;component/Assets/Images/Buttons/TitleBarButtons/DarkMode/WhiteMinimizeButtonSmaller.png"/>
    <ImageBrush x:Key="MaximizeButtonBrush" ImageSource="pack://application:,,,/Dissonance;component/Assets/Images/Buttons/TitleBarButtons/DarkMode/WhiteMaximizeButtonSmaller.png"/>
</ResourceDictionary>
