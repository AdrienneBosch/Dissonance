    <Color x:Key="InputForegroundColor">#FF2B143A</Color>
    <Color x:Key="SubtleBackgroundColor">#FFF4E8FF</Color>
    <Color x:Key="SliderTrackBackgroundColor">#FFEADCF9</Color>
    <Color x:Key="SliderThumbBorderColor">#FFFFFFFF</Color>
