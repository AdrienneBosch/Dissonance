<Window x:Name="Dissonance" x:Class="Dissonance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Dissonance.ViewModels"
        mc:Ignorable="d"
        Title="Dissonance" Height="450" Width="800" WindowStartupLocation="CenterScreen" BorderBrush="White" Background="#FFD08753">
    <Grid x:Name="DissonanceGrid" ScrollViewer.VerticalScrollBarVisibility="Disabled" Grid.IsSharedSizeScope="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="54*"/>
            <RowDefinition Height="124*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="243*"/>
            <ColumnDefinition Width="328*"/>
            <ColumnDefinition Width="229*"/>
        </Grid.ColumnDefinitions>
        <!-- Voice Rate TextBox -->

        <!-- Hotkey TextBox for reading clipboard -->
        <Label x:Name="DissonanceTitleLable" Content="Dissonance" VerticalAlignment="Center" FontSize="28" RenderTransformOrigin="2.124,0.466" UseLayoutRounding="True" ScrollViewer.VerticalScrollBarVisibility="Disabled" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Column="1" Height="48" Width="150"/>

        <!-- Hotkey TextBox for reading clipboard -->
        <TextBox x:Name="ReadClipboardHotkeyTextBox"
                 HorizontalAlignment="Left"
                 Margin="45,0,0,0"
                 TextWrapping="Wrap"
                 Text="{Binding HotkeyCombination, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 VerticalAlignment="Center"
                 Width="100" Grid.Column="2" Grid.Row="1" Height="18" TabIndex="3" />

        <!-- Voice Selection ComboBox -->
        <ComboBox x:Name="VoiceSelectionComboBox"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Top"
                  Width="200"
                  ItemsSource="{Binding AvailableVoices}"
                  SelectedItem="{Binding Voice, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Grid.Row="1" Height="27" TabIndex="2" Text="Select a voice" BorderBrush="{x:Null}" Foreground="Black" BorderThickness="1,1,1,1" VerticalContentAlignment="Center" Padding="5,5,5,5" UseLayoutRounding="True" FontSize="14" Margin="0,10,0,0" />
        <Grid x:Name="VoiceRateGrid" MinHeight="90" MaxWidth="115" MaxHeight="90" MinWidth="115" ScrollViewer.VerticalScrollBarVisibility="Disabled" Grid.IsSharedSizeScope="True" UseLayoutRounding="True" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="90" Width="115">
            <Label x:Name="VoiceRateHeadingLable" Content="Voice Rate" FontSize="18" RenderTransformOrigin="2.124,0.466" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="0,0,0,57"/>
            <TextBox x:Name="VoiceRateTextBox"
                TextWrapping="Wrap"
                Text="{Binding VoiceRate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                TabIndex="1" Margin="17,43,17,29" AllowDrop="False" />
        </Grid>
        <Grid x:Name="VolumeGrid" MinHeight="100" MaxWidth="115" MaxHeight="100" Margin="51,31,65,117" MinWidth="115" ScrollViewer.VerticalScrollBarVisibility="Disabled" Grid.IsSharedSizeScope="True" UseLayoutRounding="True" Grid.Column="1" Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="23*"/>
                <RowDefinition Height="27*"/>
            </Grid.RowDefinitions>
            <Label x:Name="VolumeHeadingLable" Content="Volume" FontSize="18" RenderTransformOrigin="2.124,0.466" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Disabled" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="22,0,0,0"/>
            <Slider x:Name="VoiceVolumeSlider"
                Minimum="0"
                Maximum="100"
                Value="{Binding Volume, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" VerticalAlignment="Center" Width="170" MinWidth="170" MinHeight="35" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" TabIndex="4" Height="34" HorizontalAlignment="Left" Margin="-28,0,0,0" />
        </Grid>
    </Grid>
</Window>