<UserControl x:Class="Dissonance.UserControls.Lables.HeadingLable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dissonance.UserControls.Lables"
             mc:Ignorable="d">
    <Grid x:Name="HeadingLableGrid" ScrollViewer.VerticalScrollBarVisibility="Disabled">
        <Label x:Name="HeadingLable1" 
               Content="{Binding HeadingText, RelativeSource={RelativeSource AncestorType=UserControl}}" 
               HorizontalAlignment="Center" 
               Margin="10,10,10,10" 
               VerticalAlignment="Center" 
               Background="Transparent" 
               FontSize="20" 
               Foreground="{DynamicResource ForgroundBrush}" 
               BorderBrush="{DynamicResource PrimaryBrush}"
               BorderThickness="1"/>
        <!-- Added BorderThickness property -->
    </Grid>
</UserControl>
