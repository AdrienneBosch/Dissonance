<UserControl x:Class="Dissonance.UserControls.SettingsMenu.SettingsMennu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dissonance.UserControls.SettingsMenu"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="110">
    <Menu HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <MenuItem Header="Settings">
            <MenuItem Header="Configuration">
                <MenuItem Header="Save">
                    <MenuItem Header="Set as Default Configuration" Click="SetAsDefaultConfiguration_Click"/>
                    <MenuItem Header="Save Configuration" Click="SaveConfiguration_Click"/>
                </MenuItem>
                <MenuItem Header="Load">
                    <MenuItem Header="Load Configuration" Click="LoadConfiguration_Click"/>
                    <MenuItem Header="Restore Factory Default" Click="RestoreFactoryDefault_Click"/>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Hotkeys">
            </MenuItem>
        </MenuItem>
    </Menu>
</UserControl>
