<!-- CustomTitleBar.xaml -->
<UserControl x:Class="Dissonance.UserControls.Title_Bar.CustomTitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="50" Width="960">
    <Border Background="{DynamicResource TitleBarPrimaryBrush}" BorderBrush="{DynamicResource TitleBarSecondaryBrush}" BorderThickness="1">
        <Grid Background="{DynamicResource TitleBarPrimaryBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="WindowTitle" Grid.Column="0" VerticalAlignment="Center" Margin="10,0" Foreground="White" FontSize="16" Text="Your App Title"/>
            <StackPanel x:Name="ButtonPannel" Orientation="Horizontal" Margin="778,0,10,0">
                <Button Content="Minimize" Click="MinimizeButton_Click" Width="75" Margin="5,0"/>
                <Button Content="Close" Click="CloseButton_Click" Width="75" Margin="5,0"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
