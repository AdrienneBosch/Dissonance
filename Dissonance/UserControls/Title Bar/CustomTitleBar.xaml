<!-- CustomTitleBar.xaml -->
<UserControl x:Class="Dissonance.UserControls.Title_Bar.CustomTitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="50" Width="738">
    <Grid Background="DarkSlateGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="WindowTitle" Grid.Column="0" VerticalAlignment="Center" Margin="10,0" Foreground="White" FontSize="16" Text="Your App Title"/>
        <StackPanel x:Name="ButtonPannel" Grid.Column="1" Orientation="Horizontal">
            <Button Content="Minimize" Click="MinimizeButton_Click" Width="75" Margin="5,0"/>
            <Button Content="Close" Click="CloseButton_Click" Width="75" Margin="5,0"/>
        </StackPanel>
    </Grid>
</UserControl>
