<!-- CustomTitleBar.xaml -->
<UserControl x:Class="Dissonance.UserControls.Title_Bar.CustomTitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="34" Width="960">
    <Border Background="{DynamicResource TitleBarPrimaryBrush}" BorderBrush="{DynamicResource TitleBarSecondaryBrush}" BorderThickness="1">
        <Grid Background="{DynamicResource TitleBarPrimaryBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="WindowTitle" Grid.Column="0" VerticalAlignment="Center" Margin="10,0" Foreground="White" FontSize="16" Text="Dissonance"/>
            <StackPanel x:Name="ButtonPannel" Orientation="Horizontal" Margin="850,0,0,0">
                <Button Content="Minimize" Click="MinimizeButton_Click" Width="55" Margin="5,0"/>
                <Button Background="{DynamicResource ExitButtonBrush}" Click="CloseButton_Click" Width="24" Margin="5,0" Height="24"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
