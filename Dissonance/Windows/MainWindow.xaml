<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dissonance.UserControls.Title_Bar"
        xmlns:Buttons="clr-namespace:Dissonance.UserControls.Buttons" x:Class="Dissonance.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="557" Width="960"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="White" BorderBrush="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <local:CustomTitleBar VerticalAlignment="Center"/>
        <Grid x:Name="BodyGrid" Background="{DynamicResource BackgroundBrush}" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

            <Grid x:Name="ThemeToggleButtonContainer" Margin="910,10,0,476" Width="40" HorizontalAlignment="Left"/>
        </Grid>
    </Grid>
</Window>
