<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Dissonance.UserControls.Title_Bar"
    xmlns:Buttons="clr-namespace:Dissonance.UserControls.Buttons" 
    xmlns:SettingsMenu="clr-namespace:Dissonance.UserControls.SettingsMenu" 
    x:Class="Dissonance.MainWindow"
    mc:Ignorable="d"
    Title="MainWindow" 
    Height="557" 
    Width="960"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None" 
    AllowsTransparency="True" 
    Background="White" 
    BorderBrush="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">

    <DockPanel>
        <local:CustomTitleBar DockPanel.Dock="Top" Height="40"/>
        <Grid x:Name="BodyGrid" Background="{DynamicResource BackgroundBrush}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ScrollViewer.VerticalScrollBarVisibility="Disabled" ShowGridLines="True" UseLayoutRounding="True">
            <!-- Define the row definitions for the body grid with specific sizes -->
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <!-- First row with fixed height of 60 pixels -->
                <RowDefinition Height="*" />
                <!-- Second row takes up the remaining space -->
                <RowDefinition Height="100" />
                <!-- Third row with fixed height of 100 pixels -->
            </Grid.RowDefinitions>

            <!-- Header body grid placed in the first row -->
            <Grid x:Name="HeaderBodyGrid" Grid.Row="0" Background="#FF22BD96">
                <Grid x:Name="SettingsMenuGrid" HorizontalAlignment="Left" Width="81" Margin="10,10,0,0">
                    <SettingsMenu:SettingsMennu HorizontalAlignment="Left" VerticalAlignment="Top"/>
                </Grid>
                <Grid x:Name="ThemeToggleButtonContainer" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0"/>
            </Grid>

            <!-- Middle body grid with two columns -->
            <Grid x:Name="MiddleBodyGrid" Grid.Row="1" Background="#FFB14613">
                <!-- Define column definitions for the middle body grid -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <!-- Left column -->
                    <ColumnDefinition Width="*" />
                    <!-- Right column -->
                </Grid.ColumnDefinitions>

                <!-- Green grid placed in the left column -->
                <Grid Background="#FF97EF42" Grid.Column="0" Margin="10">
                    <!-- Add content for the green grid here -->
                </Grid>

                <!-- Placeholder for the right column content -->
                <Grid Background="Transparent" Grid.Column="1" Margin="10">
                    <!-- Add content for the right column here -->
                </Grid>
            </Grid>

            <!-- Placeholder for the third row content -->
            <Grid x:Name="BottomBodyGrid" Grid.Row="2" Background="LightBlue">
                <!-- Add content for the footer or additional content here -->
            </Grid>
        </Grid>
    </DockPanel>
</Window>
