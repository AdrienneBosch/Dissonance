<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwConfigExceptions="true"
      internalLogLevel="Warn"
      internalLogFile="internal-nlog.log">

	<!-- Define Targets: where the log messages will be sent -->
	<targets>
		<!-- Log to console -->
		<target xsi:type="Console" name="console" layout="${longdate} | ${level:uppercase=true} | ${logger} | ${message}" />

		<!-- Log to a file -->
		<target xsi:type="File" name="file" fileName="Logs/logfile-${shortdate}.log"
				layout="${longdate} | ${level:uppercase=true} | ${logger} | ${message}"
				keepFileOpen="false" encoding="utf-8" />
	</targets>

	<!-- Define Logging Rules: which logs go to which targets -->
	<rules>
		<!-- All logs of Trace level and higher to console and file -->
		<logger name="*" minlevel="Trace" writeTo="console,file" />
	</rules>
</nlog>
